{
    "name": "spatie/mailcoach-mailer",
    "type": "symfony-mailer-bridge",
    "description": "The Mailcoach transport for Symfony Mailer",
    "keywords": [
        "spatie",
        "mailcoach-mailer"
    ],
    "homepage": "https://mailcoach.app",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/http-client": "^6.0 || ^7.0 || ^8.0",
        "symfony/mailer": "^6.0 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\MailcoachMailer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\MailcoachMailer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
